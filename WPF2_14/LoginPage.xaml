<Page x:Class="WPF2_14.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF2_14"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      ShowsNavigationUI="False">

    <Grid>
        <GroupBox VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Password:"/>
                <PasswordBox Width="200" Name="MasterPasswordBox"/>
                <Button Content="Unlock" Click="Button_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
